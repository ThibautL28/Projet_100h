				<include name="org.opentest4j_1.0.0.v20170910-2246.jar"/>
				<include name="org.junit.jupiter.engine_5.0.0.v20170910-2246.jar"/>
				<include name="org.junit.jupiter.migrationsupport_5.0.0.v20170910-2246.jar"/>
